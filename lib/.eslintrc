{
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "gapi": true,
      "Quill": true,
      "MathJax": true
    },
    "extends": "eslint:recommended",
    "rules": {

        "space-before-function-paren": ["error", "never"],
  
      "indent": [
        "warn",
        4,
        {
          "SwitchCase": 1
        }
      ],
  
      "linebreak-style": [
        "error",
        "unix"
      ],
  
      "quotes": [
        "warn",
        "double"
      ],
  
      "semi": [
        "warn",
        "always"
      ],
  
      "no-console": 0,
  
      "no-extra-parens": [
        "warn",
        "all",
        {
          "conditionalAssign": false
        }
      ],
  
      "no-irregular-whitespace": [
        "warn",
        {
          "skipStrings": true
        }
      ],
  
      "require-jsdoc": [
        "error"
      ],
  
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "_|e",
          "varsIgnorePattern": "q"
        }
      ],
  
      "valid-jsdoc": [
        "error",
        {
          "preferType": {
            "object": "object",
            "string": "string",
            "Number": "number",
            "array": "[]"
          }
        }
      ],
  
      "block-scoped-var": [
        "error"
      ],
  
      "keyword-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
  
      "no-mixed-spaces-and-tabs": [
        "error"
      ],
  
      "no-nested-ternary": [
        "error"
      ],
  
      "no-trailing-spaces": [
        "warn",
        {
          "skipBlankLines": true
        }
      ],
  
      "no-unneeded-ternary": [
        "error"
      ],
  
      "one-var": [
        "error",
        {
          "var": "always",
          "let": "never",
          "const": "never"
        }
      ],
  
      "spaced-comment": [
        "error"
      ]
    }
}